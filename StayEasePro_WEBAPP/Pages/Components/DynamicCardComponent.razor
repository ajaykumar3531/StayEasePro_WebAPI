<div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
    <div class="col">
        <div class="card rounded border-end bg-white shadow-sm transition-all hover-scale-lg custom-card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div>
                        <div class="d-inline-flex align-items-center">
                            <h2 class="text-dark mb-1 font-weight-medium">@Value</h2>
                            <!-- Added some space between @Value and @ChangePercentage -->
                            <span class="mx-4 badge bg-success font-12 text-white font-weight-medium rounded-pill ms-2 d-md-none d-lg-block">
                                @ChangePercentage%
                            </span>
                        </div>
                        <h6 class="text-muted font-weight-normal mb-0 w-100 text-truncate">
                            @Description
                        </h6>
                    </div>
                    <div class="ms-auto mt-md-3 mt-lg-0">
                        <!-- Reduced margin between icon and text -->
                        <span class="opacity-7 text-muted">
                            <i class="@Icon fs-2"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public int Value { get; set; }
    [Parameter] public double ChangePercentage { get; set; }
    [Parameter] public string Description { get; set; }
    [Parameter] public string Icon { get; set; }
}
